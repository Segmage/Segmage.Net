@section Scripts {
	<script>
		$(document).ready(function () {
			var responseModal = new bootstrap.Modal(document.getElementById('responseModal'));
			$('.run-test').on('click', function (e) {
				e.preventDefault();
				var button = $(this);
				var url = button.data('url');
				var method = button.data('method');
				$('#modal-endpoint').text(method + ' ' + url);
				$('#modal-response-content').html('<div class="d-flex justify-content-center align-items-center" style="min-height: 200px;"><div class="spinner-border text-primary" role="status"><span class="visually-hidden">Loading...</span></div></div>');
				responseModal.show();
				$.ajax({
					url: url, type: method, contentType: 'application/json',
					beforeSend: function(){ button.prop('disabled', true).addClass('disabled'); },
					success: function (data) { $('#modal-response-content').text(JSON.stringify(data, null, 2)); },
					error: function (jqXHR, textStatus, errorThrown) {
						var errorText = `Hata: ${jqXHR.status} ${errorThrown}\n\n${jqXHR.responseText}`;
						$('#modal-response-content').text(errorText);
					},
					complete: function(){ button.prop('disabled', false).removeClass('disabled'); }
				});
			});

			$('#btnGetDataTables').on('click', function (e) {
			e.preventDefault();

			var button = $(this);
			var resultContainer = $('#dataTablesResult');
			var url = '/Test/TestGetDataTables';

			// Butonu devre dışı bırak ve yükleniyor animasyonu ekle
			button.prop('disabled', true).addClass('disabled');
			resultContainer.html('<div class="d-flex justify-content-center align-items-center p-5"><div class="spinner-border text-primary" role="status"><span class="visually-hidden">Loading...</span></div></div>');

			$.ajax({
				url: url,
				type: 'GET',
				success: function (data) {
					// Veri varsa tabloyu oluştur
					if (data && data.length > 0) {
						var tableHtml = '<table class="table table-striped table-bordered table-hover mt-3">';
						tableHtml += '<thead class="table-dark"><tr><th>ID</th><th>Module Type</th><th>Name</th><th>Type Name</th></tr></thead>';
						tableHtml += '<tbody>';

						// Her bir veri için satır oluştur
						$.each(data, function(index, item) {
							tableHtml += '<tr>';
							tableHtml += '<td>' + item.id + '</td>';
							tableHtml += '<td>' + item.moduleType + '</td>';
							tableHtml += '<td>' + item.name + '</td>';
							tableHtml += '<td>' + item.typeName + '</td>';
							tableHtml += '</tr>';
						});

						tableHtml += '</tbody></table>';
						resultContainer.html(tableHtml);
					} else {
						// Veri yoksa mesaj göster
						resultContainer.html('<div class="alert alert-warning mt-3">Gösterilecek veri bulunamadı.</div>');
					}
				},
				error: function (jqXHR) {
					// Hata durumunda mesaj göster
					var errorText = `Hata: ${jqXHR.status} - ${jqXHR.statusText}`;
					resultContainer.html('<div class="alert alert-danger mt-3">' + errorText + '</div>');
				},
				complete: function() {
					// Butonu tekrar aktif et
					button.prop('disabled', false).removeClass('disabled');
				}
			});
		});
		});
	</script>
